<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@drawable/list_item_drawable_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dip"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/home_listview_thumb_img"
                    android:layout_width="76dip"
                    android:layout_height="76dip"
                    android:src="@drawable/umeng_socialize_share_pic" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/home_listview_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="22dip"
                    android:gravity="center_vertical"
                    android:text="泳衣"
                    android:textColor="@color/black_purple"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/home_listview_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_purple2"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/home_listview_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="2013-05-05"
                    android:textColor="@color/black_purple"
                    android:textSize="@dimen/text_size_10" />
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>